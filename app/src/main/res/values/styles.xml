<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/options_menu_background</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/options_menu_text</item>
        <item name="android:textSize">@dimen/options_menu_text_size</item>
    </style>

</resources>
